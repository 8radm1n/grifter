    {% if guest.provider_config.additional_storage_volumes %}
    add_volumes = [
      {% for volume in guest.provider_config.additional_storage_volumes %}
      "virsh vol-create-as {{ guest.provider_config.storage_pool|default('default', True) }} #{username}-#{guest_name}-{{ volume.location.split('/')[-1] }} {{ volume.size }}",
      "sleep 1",
      "virsh vol-upload --pool {{ guest.provider_config.storage_pool|default('default', True) }} #{username}-#{guest_name}-{{ volume.location.split('/')[-1] }} {{ volume.location }}",
      "sleep 1"{{ "," if not loop.last }}
      {% endfor %}
    ]
    add_volumes.each_with_index do |value, index|
      node.trigger.before :up do |trigger|
        trigger.name = "add-volumes-#{index + 1}"
        trigger.info = "Adding Volumes #{index + 1}"
        trigger.run = {inline: value}
      end
    end

    delete_volumes = [
      {% for volume in guest.provider_config.additional_storage_volumes %}
      "virsh vol-delete #{username}-#{guest_name}-{{ volume.location.split('/')[-1] }} {{ guest.provider_config.storage_pool|default('default', True) }}"{{ "," if not loop.last }}
      {% endfor %}
    ]
    delete_volumes.each_with_index do |value, index|
      node.trigger.after :destroy do |trigger|
        trigger.name = "remove-volumes-#{index + 1}"
        trigger.info = "Removing Volumes #{index + 1}"
        trigger.run = {inline: value}
      end
    end
    {% endif %}